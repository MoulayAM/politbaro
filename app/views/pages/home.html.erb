<head>
 <link href='https://fonts.googleapis.com/css2?family=Red+Hat+Display&display=swap' rel='stylesheet' type='text/css'>
</head>


<body class="dark">


  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4));">
    <div class="container">
        <h1> Leveraging <strong>data</strong> to hold politicians accountable </h1>
        <p>Explore politicians news and opinions, and make your voice heard!</p>

          <div class="container">
            <div class="wrapper">
              <div class="search-container">
                    <%= form_tag politicians_path, method: :get do %>
                      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Enter a politician's name..." %>
                      <%= submit_tag "Search", class: "btn btn-primary" %>
                    <% end %>
              </div>
            </div>
          </div>

        <p>Popular politicians 🔥🔥</p>
    </div>
  </div>


</body>

<div class=“category-cards”>

  <% @popular_politicians.each do |politician|  %>

    <div class="category-card">
      <div class="left-category-card">
      <img src="<%= politician.img_url %>"/>
      </div>

      <div class="right-category-card">
        <h1><%= politician.name %></h1>
        <p><%= politician.bio.truncate(174).capitalize %></p>

      </div>
    </div>
  <% end %>
</div>
