
<div class="d-flex justify-content-around flex-wrap">
  <% @politicians.each do |politician| %>
  <div class="d-flex justify-content-center flex-wrap autour">
    <%= link_to politician.name, politician_path(politician) %>
    <div class="card align-self" style="background-image: url( <%= politician.img_url %>)">
    </div>
      <p> number of stars : <%= politician.moyenne %> </p>
      <% politician.moyenne.times do %>
        <span class="fa fa-star" ></span>
      <% end %>
       <% (5 -politician.moyenne).times do %>
        <span class="fa fa-star" ></span>
      <% end %>
  </div>
  <% end %>
</div>

