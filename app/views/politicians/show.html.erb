<div class="container py-4 my-4 mx-auto d-flex flex-column">
  <div class="header">
    <div class="row r1">
      <div class="col-md-9 abc">
         <h1><%=  @politician.name %></h1>
      </div>
      <div class="col-md-3 text-right pqr">
         <div class="popularity">
        <p> <strong> Popularity Level  </strong> : <%= @politician.moyenne %> </p>
        <% @politician.moyenne.times do %>
          <span class="fa fa-star filled" ></span>
        <% end %>
         <% (5 -@politician.moyenne).times do %>
          <span class="far fa-star" ></span>
        <% end %>
      </div>
      </div>
        <p class="text-right para"></p>
      </div>
    </div>
    <div class="container-body mt-4">
      <div class="row r3">
        <div class="col-md-5 p-0 klo">
          <ul>
            <strong>Description :</strong><h1> <%= @politician.bio %> </h1>
          </ul>
        </div>
            <div class="politician-img">
                <%= image_tag @politician.img_url, style:"object-fit: cover" %>,
            </div>
        </div>
    </div>

        <div class="d-flex justify-content-center r4">
          <%= link_to "News", politician_news_index_path(@politician), class:"btn btn-ghostt" %>
          <%= link_to "Opinions", politician_opinions_path(@politician), class:"btn btn-ghostt" %>
        </div>

</div>
